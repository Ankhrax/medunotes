<h2 class= "mx-auto md:w-1/3 sm:w-4/5 sm:items-center" >Sign up</h2>
<%= form_with model: @user, url: users_path, method: :post, class: "mx-auto md:w-1/3 sm:w-4/5 sm:items-center" do |form| %>
  <div>
    <%= form.label :email_address, "Email Address" %>
    <%= form.email_field :email_address, class: "input input-bordered w-full" %>
  </div>

  <div>
    <%= form.label :password, "Password" %>
    <%= form.password_field :password, class: "input input-bordered w-full" %>
  </div>

  <div>
    <%= form.label :password_confirmation, "Password Confirm" %>
    <%= form.password_field :password_confirmation, class: "input input-bordered w-full" %>
  </div>

  <div>
    <%= form.submit "Sign up", class: "btn btn-primary w-50%" %>
    <%= link_to "Cancel", notes_path, class: "btn btn-ghost text-xl"%>
  </div>
<% end %>
