<div class="justify-center">
  <h2 class="text-center mx-auto mb-6"><%= t("user.sign_up") %></h2>

  <%= form_with model: @user, url: users_path, method: :post, class: "mx-auto flex flex-col items-center justify-center w-full sm:w-4/5 md:w-1/3" do |form| %>

    <% if @user.errors.any? %>
      <div class="alert alert-error w-full mb-4">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="w-full mb-4">
      <%= form.label :email_address, t("user.email_address"), class: "block text-left" %>
      <%= form.email_field :email_address, class: "input input-bordered w-full" %>
    </div>

    <div class="w-full mb-4">
      <%= form.label :password, t("user.password"), class: "block text-left" %>
      <%= form.password_field :password, class: "input input-bordered w-full" %>
    </div>

    <div class="w-full mb-4">
      <%= form.label :password_confirmation, t("user.password_confirmation"), class: "block text-left" %>
      <%= form.password_field :password_confirmation, class: "input input-bordered w-full" %>
    </div>

    <div class="w-full flex justify-between items-center">
      <%= form.submit t("user.sign_up_button"), class: "btn btn-primary w-1/2" %>
      <%= link_to t("user.cancel"), notes_path, class: "btn btn-ghost text-xl ml-4" %>
    </div>
  <% end %>
</div>
