<h2 class="text-center text-2xl font-bold text-gray-40 mb-8">
  <%= t("user.account_details") %>
</h2>

<div class="mx-auto w-full sm:w-4/5 md:w-1/2 lg:w-1/3 bg-gray-40 p-6 rounded-lg shadow-xl text-gray-100">
  <div class="space-y-4">
    <!-- Correo -->
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-xl font-medium text-gray-400"><%= t("user.email_address") %></h3>
        <p class="text-lg text-gray-400"><%= @user.email_address %></p>
      </div>
      <%= link_to edit_user_path, class: "text-gray-400 hover:text-gray-400" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 3.487a2.25 2.25 0 0 1 3.182 3.182L7.444 19.27a4.5 4.5 0 0 1-1.946 1.133l-3.424.902a.75.75 0 0 1-.91-.91l.902-3.424a4.5 4.5 0 0 1 1.133-1.946L16.862 3.487z"/>
        </svg>
      <% end %>
    </div>

    <!-- ContraseÃ±a -->
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-xl font-medium text-gray-400"><%= t("user.password") %></h3>
        <p class="text-lg text-gray-400">*************************</p>
      </div>
      <%= link_to edit_password_path(token: @user.password_reset_token), class: "text-gray-400 hover:text-gray-400" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 3.487a2.25 2.25 0 0 1 3.182 3.182L7.444 19.27a4.5 4.5 0 0 1-1.946 1.133l-3.424.902a.75.75 0 0 1-.91-.91l.902-3.424a4.5 4.5 0 0 1 1.133-1.946L16.862 3.487z"/>
        </svg>
      <% end %>
    </div>

    <!-- Botones -->
    <div class="mt-6 flex justify-center space-x-4">
      <%= button_to t("user.delete_account"), @user, method: :delete, class: "btn btn-error", data: { turbo_confirm: t("user.delete_confirm") } %>
      <%= link_to t("user.back"), root_path, class: 'btn btn-primary sm:w-auto' %>
    </div>
  </div>
</div>
